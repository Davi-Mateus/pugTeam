	<queryString>
		<![CDATA[select
	id_turma,
	nome_turma,
	id_aluno,
	nome_aluno,
	numero_matricula,
	dia,
	(case when exists(select * from faltas_seguidas where id_aluno = aluno.id_aluno and qtde >= 5 and month(aluno.dia) = $P{mes} and year(aluno.dia) = $P{ano}) or exists(select * from numero_faltas_mes n where faltas >= 7) then 'S' ELSE 'N' END) as critico
from
	faltas_seguidas AS aluno
group by
	nome_aluno
having
	critico = "S"
order by
	id_aluno,
	dia;]]>
	</queryString>
